<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<servlet>
		<servlet-name>TurmaServlet</servlet-name>
		<servlet-class>br.edu.utfpr.md.servlets.TurmaServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>HorarioServlet</servlet-name>
		<servlet-class>br.edu.utfpr.md.servlets.HorarioServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>TurmaServlet</servlet-name>
		<url-pattern>/turmas</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>HorarioServlet</servlet-name>
		<url-pattern>/horario</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
